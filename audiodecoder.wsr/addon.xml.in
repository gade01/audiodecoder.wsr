<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.wsr"
  version="2.1.2"
  name="WSR Audio Decoder"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.audiodecoder"
    name="wsr"
    extension=".wsr|.wsrstream"
    tracks="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">WonderSwan R Audio Decoder</summary>
    <description lang="en">WonderSwan R (WSR) is a container format, that holds audio code ripped from the ROMs of games for the WonderSwan and WonderSwan Color handheld game system. Both the original and color versions used the same audio chip which could handle 4 PCM audio channels.</description>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/audiodecoder.wsr</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
